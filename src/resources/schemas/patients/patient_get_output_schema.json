{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "uuid": {
      "type": "string"
    },
    "display": {
      "type": "string"
    },
    "identifiers": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "uuid": { "type": "string" },
          "display": { "type": "string" }
        },
        "required": ["uuid", "display"]
      }
    },
    "person": {
      "type": "object",
      "properties": {
        "uuid": { "type": "string" },
        "display": { "type": "string" },
        "gender": { "type": "string" },
        "age": { "type": ["integer", "null"] },
        "birthdate": { "type": ["string", "null"] },
        "dead": { "type": "boolean" },
        "preferredName": {
            "type": "object",
            "properties": {
                "uuid": { "type": "string" },
                "display": { "type": "string" }
            },
            "required": ["display"]
        },
        "names": {
          "type": "array"
        },
        "addresses": {
          "type": "array"
        }
      },
      "required": ["uuid", "gender", "display", "preferredName"]
    },
    "voided": {
      "type": "boolean"
    }
  },
  "required": [
    "uuid",
    "identifiers",
    "person",
    "voided"
  ]
}